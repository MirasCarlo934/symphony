<!DOCTYPE html>
<head>
  <title><%= name %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
    <script>

    </script>
</head>

<body>

<h1><%= name %></h1>

<div>
    <div style="padding-left: 16px; border-left: 4px solid steelblue">
        <table style="border-collapse: collapse">
            <% attributes.forEach((attr) => { %>
                <tr>
                    <td style="text-align: left; padding-right: 32px;"><h2><%= attr.name %></h2></td>
                    <td style="text-align: left; padding-left: 32px; border-left: 1px solid lightsteelblue">
                        <form>
                        <% if (attr.dataType.type == "binary") { %>
                            <label class="switch">
                                <% if (attr.value) {%><input type="checkbox" name="value" checked>
                                <% } else { %><input type="checkbox" name="value"><% } %>
                                <span class="slider round"></span>
                            </label>
                        <% } else if (attr.dataType.type == "number") { %>
                            <label>
                                <input type="number" name="value" value="<%= attr.value %>"
                                       min="<%= attr.dataType.constraints.min %>"
                                       max="<%= attr.dataType.constraints.max %>"/>
                            </label>
                        <% } else if (attr.dataType.type == "enumeration") { %>
                            <% attr.dataType.constraints.values.forEach( (val) => {%>
                                <label>
                                    <input type="radio" name="value" value="<%=val%>"/>
                                    <%= val %>
                                </label>
                                <br/>
                            <% }) %>
                        <% } else { %>
                            <label>
                                <textarea name="value"><%= attr.value %></textarea>
                            </label>
                            <button type="button">submit</button>
                        <% } %>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </table>
    </div>

</div>

<script   src="https://code.jquery.com/jquery-3.5.1.min.js"   integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="   crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.9/angular.min.js"></script>
<script src="/public/ng/thing/thing.client.module.js"></script>
<script src="/public/ng/thing/controllers/thing.client.controller.js"></script>
<script src="/public/ng/thing/config/thing.client.routes.js"></script>
</body>
