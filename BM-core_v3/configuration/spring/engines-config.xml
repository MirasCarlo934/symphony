        <constructor-arg name="dbURL" value="${products.db.host}"/>
        <constructor-arg name="dbusr" value="${products.db.dbusr}"/>
        <constructor-arg name="dbpwd" value="${products.db.dbpwd}"/>
        <constructor-arg name="sysTimer" ref="SystemTimer"/>
        <constructor-arg name="reconnectPeriod" value="${db.reconnectPeriod}"/>
		<constructor-arg name="timeout" value="${db.timeout}"/>
    </bean>
