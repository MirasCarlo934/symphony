<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/util https://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc https://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <context:property-placeholder location="file:${bm.properties.home}/bm.properties"/>

    <mvc:cors>
        <mvc:mapping path="/**" />
    </mvc:cors>

    <util:list id="bm-core.singleThreadedListeners" list-class="java.util.Vector">
        <ref bean="bm-core.mongo.activityListener"/>
    </util:list>

    <util:list id="bm-core.multiThreadedListeners" list-class="java.util.Vector">
        <ref bean="bm-core.mqtt.activityListener"/>
    </util:list>

    <bean id="bm-core.activityListenerManager" class="symphony.bm.core.activitylisteners.ActivityListenerManager">
        <property name="multiThreadedListeners" ref="bm-core.multiThreadedListeners"/>
        <property name="singleThreadedListeners" ref="bm-core.singleThreadedListeners"/>
    </bean>

    <bean id="bm-core.mongo.activityListener" class="symphony.bm.core.mongodb.MongoActivityListener">
        <constructor-arg name="mongoTemplate" ref="mongoTemplate"/>
        <constructor-arg name="timeBetweenPersists" value="5000"/>
    </bean>

    <bean id="bm-core.mqtt.activityListener" class="symphony.bm.core.mqtt.MqttMicroserviceActivityListener" scope="prototype">
        <constructor-arg name="bmMqttMicroservicePort" value="${bm.port.mqtt}"/>
        <constructor-arg name="bmURL" value="${bm.url}"/>
        <property name="superGroup" ref="superGroup"/>
    </bean>
</beans>